<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Console is set to be a ConsoleAppender -->
	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%t]: |%d| %C{6} (%F:%L) - %m%n" />
		</layout>
	</appender>

	<!-- Log all logs to a separate log file every day -->
	<appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="logs/mbank.log" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] [%t]: |%d| %C{6} (%F:%L) - %m%n" />
		</layout>
	</appender>
	 
	<!-- LOGGER LIST -->
	<logger name="com.epam.cdp.concurent">
		<!-- level info logs -->
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
	</logger>

	<root>
		<priority value="INFO"></priority>
		<!-- log all log entries on console -->
		<appender-ref ref="consoleAppender" />
		<!-- push all error logs to mailAppender -->
		<appender-ref ref="fileAppender" />
	</root>
	
</log4j:configuration>